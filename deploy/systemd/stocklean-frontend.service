[Unit]
Description=StockLean Frontend Static Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/app/stocklean/frontend
ExecStart=/app/stocklean/.venv/bin/python /app/stocklean/frontend/scripts/spa_server.py --dir /app/stocklean/frontend/dist --bind 0.0.0.0 --port 8081
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
